<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feidian.sidebarTree.mapper.SpeciesMapper">

    <resultMap type="Species" id="SpeciesResult">
        <result property="speciesId"    column="species_id"    />
        <result property="speciesName"    column="species_name"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>


    <!--1.3 搜索框 大查询 根据 物种名称 模糊匹配-->
    <select id="selectSpecies" resultMap="SpeciesResult">
        select *
        from species
        where species_name like '%${species_name}%'
            and isdeleted != 1
    </select>

    <!--1.4-->
    <select id="checkSpeciesName" resultType="Integer">
        select count(*)
        from species
        where species_name = #{species_name}
    </select>

    <!--1.4-->
    <select id="selectSpeciesBySpeciesName" resultMap="SpeciesResult">
        select *
        from species
        where species_name = #{species_name}
            and isdeleted != 1
    </select>


    <sql id="selectSpeciesVo">
        select species_id, species_name, create_by, create_time, update_by, update_time, remark, isdeleted from species
    </sql>

    <select id="selectSpeciesList" parameterType="Species" resultMap="SpeciesResult">
        <include refid="selectSpeciesVo"/>
        <where>
            <if test="speciesName != null and speciesName != ''"> and species_name like concat('%', #{speciesName}, '%')</if>
            and isdeleted != 1
        </where>
    </select>

    <select id="selectSpeciesListWithoutDeleted" parameterType="Species" resultMap="SpeciesResult">
        <include refid="selectSpeciesVo"/>
        <where>
            <if test="speciesName != null and speciesName != ''"> and species_name like concat('%', #{speciesName}, '%')</if>
        </where>
    </select>

    <select id="selectSpeciesBySpeciesId" parameterType="Long" resultMap="SpeciesResult">
         <include refid="selectSpeciesVo"/>
        where species_id = #{speciesId}
        and isdeleted != 1
    </select>

    <select id="selectSpeciesBySpeciesIdWithoutDeleted" parameterType="Long" resultMap="SpeciesResult">
        <include refid="selectSpeciesVo"/>
        where species_id = #{speciesId}
    </select>

    <insert id="insertSpecies" parameterType="Species" useGeneratedKeys="true" keyProperty="speciesId">
        insert into species
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="speciesName != null and speciesName != ''">species_name,</if>
            <if test="createBy != null and createBy != ''">create_by,create_time,</if>
            <if test="updateBy != null and updateBy != ''">update_by,update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="speciesName != null and speciesName != ''">#{speciesName},</if>
            <if test="createBy != null and createBy != ''">#{createBy},NOW(),</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},NOW(),</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateSpecies" parameterType="Species">
        update species
        <trim prefix="SET" suffixOverrides=",">
            <if test="speciesName != null and speciesName != ''">species_name = #{speciesName},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},create_time = NOW(),</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},update_time = NOW(),</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where species_id = #{speciesId}
    </update>

    <delete id="deleteSpeciesBySpeciesId" parameterType="Long">
        update species set isdeleted = 1 where species_id = #{speciesId}
    </delete>

    <delete id="deleteSpeciesBySpeciesIds" parameterType="String">
        UPDATE species
        SET isdeleted = 1
        WHERE species_id IN
        <foreach item="speciesId" collection="array" open="(" separator="," close=")">
            #{speciesId}
        </foreach>
    </delete>

<!--    查询所有物种-->
    <select id="ListSpecies" resultMap="SpeciesResult">
        select species_id,species_name from species where isdeleted != 1
    </select>


</mapper>